.container
  %h1
    = @status.capitalize
    Orders

  .row.mb-3

    .col-lg-2
      = link_to "Pending", orders_path, class: "btn btn-#{@status == "pending" ? 'primary' : 'secondary'} mb-1 btn-block"

    .col-lg-2
      = link_to "Completed", orders_path(status: "complete"), class: "btn btn-#{@status == 'complete' ? 'primary' : 'secondary'} mb-1 btn-block"

    .col-lg-2
      = link_to "Cancelled", orders_path(status: "cancelled"), class: "btn btn-#{@status == 'cancelled' ? 'primary' : 'secondary'} mb-1 btn-block"

    .col-md-6
      -# = link_to_tracker_spreadsheet

  .table-responsive
    %table.table.table-striped.table-dark.table-hover.table-sm
      %thead
        %tr
          %th Order ID
          %th Player Name
          %th Total
          %th Status
      %tbody
        = render @orders
